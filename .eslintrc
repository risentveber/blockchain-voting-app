{
  "extends": "airbnb-base",
  "plugins": [
    "import"
  ],
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "settings": {
    "import/ignore": [
      "node_modules",
      ".(json|less|css|xml)$"
    ]
  },
  "globals": {
    "ymaps": true,
    "grabber": true,
    "jasmine": true
  },
  "rules": {
    "no-plusplus": 0,
    "arrow-parens": 0,
    "no-mixed-operators": 0,
    "comma-dangle": 0,
    "no-param-reassign": 0,
    "no-continue": 0,
    "global-require": 0
  }
}
